{
  "name": "svelte-app",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w & gunicorn app:APP -w 6 -b 0.0.0.0:5000 --reload",
    "svelte": "rollup -c -w",
    "start": "sirv public --no-clear",
    "mysql:new": "npx dbmate -d \"mysql\" -e \"DB_MYSQL\" new ",
    "mysql:up": "npx dbmate -d \"mysql\" -e \"DB_MYSQL\" up",
    "mysql:rollback": "npx dbmate -d \"mysql\" -e \"DB_MYSQL\" rollback",
    "pg:new": "npx dbmate -d \"postgres\" -e \"DB_PG\" new",
    "pg:up": "npx dbmate -d \"postgres\" -e \"DB_PG\" up",
    "pg:rollback": "npx dbmate -d \"postgres\" -e \"DB_PG\" rollback"
  },
  "devDependencies": {
    "dbmate": "^2.23.0",
    "mysql": "^2.18.1",
    "pg": "^8.13.1"
  }
}
